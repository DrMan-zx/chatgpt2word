{
  "manifest_version": 3,
  "name": "ChatGPT HTML to Word Converter",
  "version": "1.0.0",
  "description": "Convert ChatGPT HTML exports with KaTeX formulas to Word documents",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "https://ghrmdxezrfxq.sealosgzg.site/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ChatGPT to Word Converter",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
